{
  "name": "@chude/later",
  "version": "2.0.1",
  "description": "MCP server for deferred decision management - capture decisions with context, revisit later without memory overhead",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "later": "./bin/later",
    "later-mcp": "./dist/index.js"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src/**/*.ts",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.ci.js",
    "prepublishOnly": "bun run build && bun run test:ci",
    "preversion": "bun run test:ci",
    "postversion": "git push && git push --tags",
    "release": "bun run build && bun run test:ci && bun publish"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "anthropic",
    "ai",
    "decision-management",
    "productivity",
    "deferred-decisions",
    "context-capture"
  ],
  "author": "Chude <chude@emeke.org>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chudeemeke/later.git"
  },
  "bugs": {
    "url": "https://github.com/chudeemeke/later/issues"
  },
  "homepage": "https://github.com/chudeemeke/later#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^12.5.0",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "ora": "^9.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.5",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.24",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  }
}
